@page
@model BDTransportCompany.Pages.Staf.EditModel

@{
    ViewData["Title"] = "Изменить";
}

<h1>Изменить</h1>

<h4>Сотрудники</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Staff.ID" />
            <div class="form-group">
                <label asp-for="Staff.Staff_ID" class="control-label"></label>
                <input asp-for="Staff.Staff_ID" class="form-control" />
                <span asp-validation-for="Staff.Staff_ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Staff.FullName" class="control-label"></label>
                <input asp-for="Staff.FullName" class="form-control" />
                <span asp-validation-for="Staff.FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Staff.Age" class="control-label"></label>
                <input asp-for="Staff.Age" class="form-control" />
                <span asp-validation-for="Staff.Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Staff.Gender" class="control-label"></label>
                <input asp-for="Staff.Gender" class="form-control" />
                <span asp-validation-for="Staff.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Staff.Adress" class="control-label"></label>
                <input asp-for="Staff.Adress" class="form-control" />
                <span asp-validation-for="Staff.Adress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Staff.PhoneNumber" class="control-label"></label>
                <input asp-for="Staff.PhoneNumber" class="form-control" />
                <span asp-validation-for="Staff.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Staff.PassportData" class="control-label"></label>
                <input asp-for="Staff.PassportData" class="form-control" />
                <span asp-validation-for="Staff.PassportData" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Staff.PositionID" class="control-label"></label>
                <input asp-for="Staff.PositionID" class="form-control" />
                <span asp-validation-for="Staff.PositionID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
