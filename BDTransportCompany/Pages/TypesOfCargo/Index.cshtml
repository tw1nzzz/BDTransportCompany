@page
@model BDTransportCompany.Pages.TypesOfCargo.IndexModel

@{
    ViewData["Title"] = "Таблица";
}

<h1>Таблица</h1>

<p>
    <a asp-page="Create">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TypesOfCargos[0].TypesOfCargos_ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypesOfCargos[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypesOfCargos[0].TypeOfCar_ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypesOfCargos[0].Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.TypesOfCargos) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TypesOfCargos_ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @{
                    try
                    {
                        @Model.TypesOfCars.First(r => r.ID == item.TypeOfCarID).Name
                    }
                    catch
                    {
                        <p> Данных нет </p>
                    }
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Изменить</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Подробнее</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
