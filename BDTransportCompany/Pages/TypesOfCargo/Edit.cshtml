@page
@model BDTransportCompany.Pages.TypesOfCargo.EditModel

@{
    ViewData["Title"] = "Изменить";
}

<h1>Изменить</h1>

<h4>Виды грузов</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TypesOfCargos.ID" />
            <div class="form-group">
                <label asp-for="TypesOfCargos.TypesOfCargos_ID" class="control-label"></label>
                <input asp-for="TypesOfCargos.TypesOfCargos_ID" class="form-control" />
                <span asp-validation-for="TypesOfCargos.TypesOfCargos_ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypesOfCargos.Title" class="control-label"></label>
                <input asp-for="TypesOfCargos.Title" class="form-control" />
                <span asp-validation-for="TypesOfCargos.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypesOfCargos.TypeOfCarID" class="control-label"></label>
                <input asp-for="TypesOfCargos.TypeOfCarID" class="form-control" />
                <span asp-validation-for="TypesOfCargos.TypeOfCarID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypesOfCargos.Description" class="control-label"></label>
                <input asp-for="TypesOfCargos.Description" class="form-control" />
                <span asp-validation-for="TypesOfCargos.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
